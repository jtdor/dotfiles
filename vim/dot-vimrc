unlet! skip_defaults_vim
source $VIMRUNTIME/defaults.vim

set copyindent
set preserveindent
set shiftwidth=0
set tabstop=4

set colorcolumn=+1
set hlsearch
set matchpairs+=<:>
set mouse=
set nowrap
set number
set ruler

set spelllang=de,en

autocmd BufRead,BufNewFile *.tpp set filetype=cpp

if executable("rg")
	set grepprg=rg\ --vimgrep
	set grepformat=%f:%l:%c:%m
else
	set grepprg=grep\ -HIns\ --exclude=tags\ --exclude-dir=.git\ $*
endif

let g:tex_flavor="latex"

let g:ale_fix_on_save = 1
let g:ale_fixers = {
	\ "c": ["clang-format"],
	\ "cpp": ["clang-format"],
	\ "perl": ["perltidy"],
	\ "python": ["isort", "black"]
\}
packadd! ale
